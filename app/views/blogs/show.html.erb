<% provide :title, @blog.title %>

<p id="notice"><%= notice %></p>

<h1><%= @blog.title %></h1>

<p>
  <%= @blog.post %>
  
</p>
<p class="metadata">
    <strong>Published on <%= @blog.published_on %></strong>
</p>

<div class="comments_form">
    <%= render "comments/form"%>
</div>

<div class="comment">
    <%= @comments.each do |comment| %>
        <p><strong><%= comment.author_name %> says:</strong><%= comment.text %></p>
    <% end %>
</div>






<%= link_to 'Edit', edit_blog_path(@blog) %> |
<%= link_to 'Back', blogs_path %>
