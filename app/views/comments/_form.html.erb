<%= form_for [@blog, @comment] do |f| %>
    <div class="field">
        <%= f.label :text %><br />
        <%= f.text_area :text %>
    </div>
    
    <div class="field">
        <%= f.label :author_name %><br />
        <%= f.text_field :author_name %>
    </div>
    
    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>